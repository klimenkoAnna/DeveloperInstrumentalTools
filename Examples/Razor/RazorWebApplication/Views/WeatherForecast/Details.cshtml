@model WeatherForecast

@{
    ViewBag.Title = $"Weather forecast for {this.Model.TimeStamp}";
    Layout = "_Layout";
}

<h3>Forecast for @this.Model.TimeStamp</h3>
<div class="container">
    <div class="row">
        <div class="col">
            Temperature in C
        </div>
        <div class="col">
            Temperature in F
        </div>
        <div class="col">
            Summary
        </div>
    </div>
    <div class="row">
        <div class="col">
            @this.Model.TemperatureCText
        </div>
        <div class="col">
            @this.Model.TemperatureFText
        </div>
        <div class="col">
            @this.Model.Summary
        </div>
    </div>
    <div class="row">
        <div class="col">
            @Html.ActionLink("Back to list", "Index")
        </div>
    </div>
</div>